<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hamitmizrak.ibb_ecodation_javafx.controller.AdminController">

    <!-- HEADER -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-box" style="-fx-padding: 10;">
                <Label text="🔧 Yönetim Paneli" styleClass="title-label" />
                <Button fx:id="themeButton" text="🌙 Karanlık Mod" onAction="#toggleTheme" />
                <Button fx:id="languageButton" text="🌐 Dil" onAction="#languageTheme" />
                <Button text="🔔 Bildirimler" onAction="#showNotifications" />
                <Button text="💾 Yedekle" onAction="#backupData" />
                <Button text="🔁 Geri Yükle" onAction="#refreshTable" />

                <Pane HBox.hgrow="ALWAYS" />
                <Button text="🪪 Not Defteri" onAction="#notebook" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button text="👤 Profil" onAction="#showProfile" />

                <Button text="🚦Çıkış" onAction="#logout" styleClass="secondary-button" />
                <Label fx:id="clockLabel" />
            </HBox>

            <MenuBar fx:id="menuBar">
            <menus>
                    <Menu text="Dosya">
                        <MenuItem text="Çıkış" onAction="#logout" />
                    </Menu>
                    <Menu text="Kullanıcı">
                        <MenuItem text="Kullanıcı Ekle" onAction="#addUser" />
                        <MenuItem text="Kullanıcı Güncelle" onAction="#updateUser" />
                        <MenuItem text="Kullanıcı Sil" onAction="#deleteUser" />
                    </Menu>
                    <Menu text="KDV İşlemleri">
                        <MenuItem text="KDV Ekle" onAction="#addKdv" />
                        <MenuItem text="KDV Güncelle" onAction="#updateKdv" />
                        <MenuItem text="KDV Sil" onAction="#deleteKdv" />
                    </Menu>
                <Menu text="Diğer İşlemler">
                    <MenuItem text="Hesap Makinesi" onAction="#openCalculator" />
                    <MenuItem text="Not Defteri" onAction="#notebook" />
                </Menu>
                    <Menu text="Yardım">
                        <MenuItem text="Hakkında" onAction="#showAbout" />
                    </Menu>
                </menus>
            </MenuBar>
        </VBox>
    </top>

 <!-- ANA GÖRÜNÜM -->
    <center>
        <SplitPane orientation="HORIZONTAL">

            <!-- SOL PANEL (Kullanıcı Yönetimi) -->
            <VBox spacing="20" styleClass="panel-container" style="-fx-padding: 30;">
                <Label text="👤 Kullanıcı Yönetimi" styleClass="section-title" />
                <TextField fx:id="searchField" promptText="Kullanıcı adı, e-posta veya rol ara..."
                           styleClass="input-field" />
                <ComboBox fx:id="filterRoleComboBox" promptText="Rol filtrele"
                          styleClass="input-field" />

                <TableView fx:id="userTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="40" />
                        <TableColumn fx:id="usernameColumn" text="Kullanıcı Adı" prefWidth="150" />
                        <TableColumn fx:id="emailColumn" text="E-Posta" prefWidth="180" />
                        <TableColumn fx:id="passwordColumn" text="Şifre" prefWidth="100" />
                        <TableColumn fx:id="roleColumn" text="Rol" prefWidth="80" />
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Button text="Ekle" onAction="#addUser" styleClass="primary-button" />
                    <Button text="Güncelle" onAction="#updateUser" styleClass="primary-button" />
                    <Button text="Sil" onAction="#deleteUser" styleClass="secondary-button" />
                    <Button text="Yazdır" onAction="#printTable" styleClass="secondary-button" />
                </HBox>
                <HBox spacing="10">
                </HBox>
            </VBox>

            <!-- SAĞ PANEL (KDV) -->
            <VBox spacing="15" styleClass="panel-container" style="-fx-padding: 30;">
                <Label text="📊 KDV Hesaplama" styleClass="section-title" />
                <TextField fx:id="searchKdvField" promptText="Fiş numarası ara..."
                           styleClass="input-field" />

                <TableView fx:id="kdvTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="idColumnKdv" text="ID" prefWidth="40" />
                        <TableColumn fx:id="amountColumn" text="Tutar" prefWidth="80" />
                        <TableColumn fx:id="kdvRateColumn" text="KDV (%)" prefWidth="80" />
                        <TableColumn fx:id="kdvAmountColumn" text="KDV Tutarı" prefWidth="90" />
                        <TableColumn fx:id="totalAmountColumn" text="Toplam" prefWidth="90" />
                        <TableColumn fx:id="receiptColumn" text="Fiş No" prefWidth="90" />
                        <TableColumn fx:id="dateColumn" text="Tarih" prefWidth="100" />
                        <TableColumn fx:id="descColumn" text="Açıklama" prefWidth="150" />
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="KDV Ekle" onAction="#addKdv" styleClass="primary-button" />
                    <Button text="Güncelle" onAction="#updateKdv" styleClass="primary-button" />
                    <Button text="Sil" onAction="#deleteKdv" styleClass="secondary-button" />
                </HBox>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnKdvExportTxt" text="TXT'ye Aktar" onAction="#exportKdvAsTxt"
                            styleClass="secondary-button" />
                    <Button fx:id="btnKdvExportPdf" text="PDF'e Aktar" onAction="#exportKdvAsPdf"
                            styleClass="secondary-button" />
                    <Button fx:id="btnKdvExportExcel" text="Excel'e Aktar" onAction="#exportKdvAsExcel"
                            styleClass="secondary-button" />
                </HBox>

                <HBox spacing="10" alignment="CENTER">
                     <Button fx:id="btnKdvPrint" text="Yazdır" onAction="#printKdvTable"
                            styleClass="secondary-button" />
                    <Button fx:id="btnKdvMail" text="Mail Gönder" onAction="#sendKdvByMail"
                            styleClass="secondary-button" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer" style="-fx-padding: 12;">
            <Label text="© 2025 MSC HAMİT MIZRAK Teknoloji | Kullanıcı ve KDV Yönetimi Sistemi" styleClass="footer-label" style="-fx-font-size: 13px;" />
        </HBox>
    </bottom>

</BorderPane>
